@{
}

<form method="post">
    <input type="hidden" asp-for="category.Id" />
    <table>
        <tr>
            <td>
                <label asp-for="category.CategoryName">Category Name:</label>
            </td>
            <td>
                <input asp-for="category.CategoryName" />
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="category.MaxNumberOfProducts">Max Products:</label>
            </td>
            <td>
                <input asp-for="category.MaxNumberOfProducts" />
